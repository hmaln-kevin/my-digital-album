<p id="notice"><%= notice %></p>

<h1>Figures</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Rarity</th>
      <th>Description</th>
      <th>Picture</th>
      <th>Code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% current_user.figures.each do |figure| %>
      <tr>
        <td><%= figure.name %></td>
        <td><%= figure.rarity %></td>
        <td><%= figure.description %></td>
        <td><%= image_tag figure.picture, width: 50, height: 50 %></td>
        <td><%= figure.code %></td>
        <td><%= link_to 'Show', figure %></td>
        <td><%= link_to 'Edit', edit_figure_path(figure) %></td>
        <td><%= link_to 'Destroy', figure, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Figure', new_figure_path %> |
<%= link_to "Open Pack (#{current_user.unopened})", open_pack_path %> | 
<%= link_to 'Claim you daily pack', free_pack_path %>
